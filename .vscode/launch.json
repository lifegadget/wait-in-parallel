{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "All Mocha Tests",
      "type": "node",
      "request": "launch",
      "stopOnEntry": false,
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "protocol": "inspector",
      "cwd": "${workspaceRoot}",
      "args": [
        "--no-timeouts",
        "--compilers",
        "ts:ts-node/register",
        "${workspaceRoot}/test/**/*-spec.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Current TS Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": ["--no-timeouts", "--compilers", "ts:ts-node/register", "${relativeFile}"],

      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "Launch Program",
      "program": "${workspaceRoot}/lib/index.js",
      "outFiles": []
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Port",
      "address": "localhost",
      "port": 5858,
      "outFiles": []
    }
  ]
}
